            "parameters": {
                "jsCode": "// CONFIGURAÇÃO DINÂMICA (Para todos os dias)\n// Lê a data solicitada ou usa Hoje\n\nconst query = $input.all()[0].json.query || {};\nlet targetDate = new Date();\n\nif (query.date) {\n  // Força hora do meio do dia para evitar problemas de fuso horário\n  targetDate = new Date(query.date + 'T12:00:00');\n}\n\nconst isoDate = targetDate.toISOString().split('T')[0];\nconst daysMap = ['Domingo', 'Segunda', 'Terca', 'Quarta', 'Quinta', 'Sexta', 'Sabado'];\nconst dayName = daysMap[targetDate.getDay()];\n\n// Lógica para lidar com Segunda-feira (Dia de Descanso/Faxina)\nlet targetDay = dayName;\nif (dayName === 'Segunda') targetDay = 'Terca';\n\nreturn {\n  day_name: dayName,\n  target_day: targetDay,\n  sheet_reservas: `Reservas_${targetDay}`,\n  sheet_mesas: `Mesas_${targetDay}`,\n  date_formatted: targetDate.toLocaleDateString('pt-BR'),\n  iso_date: isoDate\n};"
            },
